<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactPage">

    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:fontFamily="@font/oxygen_bold" />

    <EditText
        android:id="@+id/phoneField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text="Phone Number"
        tools:text="Phone #" />

    <EditText
        android:id="@+id/monthField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Month"
        tools:text="Month" />

    <EditText
        android:id="@+id/dayField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Day"
        tools:text="Day" />

    <EditText
        android:id="@+id/msgField"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Enter message here"
        android:textAlignment="center"
        tools:text="Enter message here" />

    <EditText
        android:id="@+id/timeField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:text="Time"
        tools:text="Enter time here" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>